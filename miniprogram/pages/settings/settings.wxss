.settings-page {
  padding: 24rpx;
}

/* VIP提示 */
.vip-notice {
  background: #fff7e6;
  border: 1rpx solid #ffd591;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  gap: 24rpx;
}

.notice-icon {
  font-size: 48rpx;
  line-height: 1;
}

.notice-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.notice-title {
  font-size: 32rpx;
  color: #d48806;
  font-weight: 600;
}

.notice-text {
  font-size: 26rpx;
  color: #8c6d1f;
  line-height: 1.5;
}

/* 设置卡片 */
.settings-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 表单 */
.form-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.form-item {
  flex: 1;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #595959;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 28rpx;
  background: #fafafa;
  border: 1rpx solid #d9d9d9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #262626;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: #1890ff;
  color: white;
}

.btn-secondary {
  background: #f0f0f0;
  color: #595959;
}

.btn[disabled] {
  background: #d9d9d9;
  color: #8c8c8c;
}

