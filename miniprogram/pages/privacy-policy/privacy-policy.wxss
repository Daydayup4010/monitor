.policy-page {
  padding: 32rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

.content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
  text-align: center;
  margin-bottom: 16rpx;
}

.update-time {
  font-size: 24rpx;
  color: #8c8c8c;
  text-align: center;
  margin-bottom: 32rpx;
}

.intro {
  font-size: 28rpx;
  color: #595959;
  line-height: 1.8;
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #595959;
  line-height: 1.8;
}

.sub-title {
  font-weight: 600;
  color: #262626;
}

.footer {
  margin-top: 60rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  text-align: center;
  font-size: 28rpx;
  color: #1890ff;
}
