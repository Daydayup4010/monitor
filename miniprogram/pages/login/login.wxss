.login-page {
  min-height: 100vh;
  display: flex;
  align-items: stretch;
  justify-content: center;
  background: #f5f7fa;
  padding: 60rpx 40rpx;
}

.login-card {
  background: white;
  border-radius: 16rpx;
  padding: 60rpx 50rpx 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.login-header {
  text-align: center;
  margin-bottom: 50rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #8c8c8c;
}

.btn-login {
  width: 100%;
  height: 96rpx;
  background: #1890ff !important;
  color: white !important;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-login::after {
  border: none;
}

.skip-login {
  text-align: center;
  margin-top: 32rpx;
  padding: 16rpx;
}

.skip-login text {
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 协议勾选 */
.agreement-check {
  display: flex;
  align-items: flex-start;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.checkbox {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 4rpx;
  margin-right: 8rpx;
  margin-top: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.2s;
}

.checkbox.checked {
  background: #1890ff;
  border-color: #1890ff;
}

.checkbox text {
  font-size: 16rpx;
  color: white;
  font-weight: 600;
}

.agreement-text {
  font-size: 24rpx;
  color: #8c8c8c;
  line-height: 1.6;
}

.link {
  color: #1890ff;
}
