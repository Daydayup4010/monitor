.login-page {
  min-height: 100vh;
  display: flex;
  align-items: stretch;
  justify-content: center;
  background: #f5f7fa;
  padding: 60rpx 40rpx;
}

.login-card {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx 60rpx 30rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.1);
}

.login-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #8c8c8c;
}

.btn-login {
  width: 100%;
  height: 100rpx;
  background: #1890ff;
  color: white;
  font-size: 38rpx;
  font-weight: 500;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-login::after {
  border: none;
}

.tips {
  text-align: center;
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.link {
  color: #1890ff;
}

