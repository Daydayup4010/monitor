.bind-page {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 40rpx;
}

.bind-card {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 步骤指示器 */
.steps {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.step-num {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #e8e8e8;
  color: #8c8c8c;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.step.active .step-num {
  background: #1890ff;
  color: white;
}

.step-text {
  font-size: 24rpx;
  color: #8c8c8c;
}

.step.active .step-text {
  color: #1890ff;
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: #e8e8e8;
  margin: 0 16rpx;
  margin-bottom: 32rpx;
}

.step-line.active {
  background: #1890ff;
}

/* 邮箱显示 */
.email-display {
  background: #f5f7fa;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.email-label {
  font-size: 26rpx;
  color: #8c8c8c;
}

.email-value {
  font-size: 28rpx;
  color: #262626;
  font-weight: 500;
}

.card-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #8c8c8c;
}

.form {
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #595959;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-wrapper {
  width: 100%;
  padding: 0 32rpx;
  background: #fafafa;
  border: 1rpx solid #d9d9d9;
  border-radius: 16rpx;
  box-sizing: border-box;
  height: 76rpx;
  display: flex;
  align-items: center;
}

.input {
  width: 100%;
  font-size: 28rpx;
  color: #262626;
  background: transparent;
  border: none;
}

.input-wrapper:focus-within {
  background: white;
  border-color: #1890ff;
}

.code-row {
  display: flex;
  gap: 16rpx;
  align-items: stretch;
}

.code-input {
  flex: 1.5;
}

.btn-code {
  padding: 0 24rpx;
  height: 76rpx;
  background: #52c41a;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 16rpx;
  white-space: nowrap;
  line-height: 76rpx;
  flex: 1;
}

.btn-code::after {
  border: none;
}

.btn-code[disabled] {
  background: #d9d9d9;
  color: #8c8c8c;
}

.btn-submit {
  width: 100%;
  height: 80rpx;
  background: #1890ff;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.btn-submit::after {
  border: none;
}

.btn-submit[disabled] {
  background: #d9d9d9;
  color: #8c8c8c;
}

.skip {
  text-align: center;
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 合并账号提示 */
.merge-tip {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f5ff 100%);
  border-radius: 12rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.2);
}

.merge-icon {
  font-size: 32rpx;
}

.merge-text {
  font-size: 26rpx;
  color: #1890ff;
  flex: 1;
  line-height: 1.5;
}
