.bind-page {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 40rpx;
}

.bind-card {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #8c8c8c;
}

.form {
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 32rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #595959;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-wrapper {
  width: 100%;
  padding: 0 32rpx;
  background: #fafafa;
  border: 1rpx solid #d9d9d9;
  border-radius: 16rpx;
  box-sizing: border-box;
  height: 76rpx;
  display: flex;
  align-items: center;
}

.input {
  width: 100%;
  font-size: 28rpx;
  color: #262626;
  background: transparent;
  border: none;
}

.input-wrapper:focus-within {
  background: white;
  border-color: #1890ff;
}

.code-row {
  display: flex;
  gap: 16rpx;
  align-items: stretch;
}

.code-input {
  flex: 1.5;
}

.btn-code {
  padding: 0 24rpx;
  height: 76rpx;
  background: #52c41a;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 16rpx;
  white-space: nowrap;
  line-height: 76rpx;
  flex: 1;
}

.btn-code::after {
  border: none;
}

.btn-code[disabled] {
  background: #d9d9d9;
  color: #8c8c8c;
}

.btn-submit {
  width: 100%;
  height: 80rpx;
  background: #1890ff;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.btn-submit::after {
  border: none;
}

.btn-submit[disabled] {
  background: #d9d9d9;
  color: #8c8c8c;
}

.skip {
  text-align: center;
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #8c8c8c;
}

