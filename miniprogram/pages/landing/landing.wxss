/* 首页样式 */
.landing-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f4ff 0%, #f5f7fa 100%);
  padding: 0 32rpx;
  padding-bottom: 200rpx;
  box-sizing: border-box;
}

/* 顶部 Logo 区域 */
.hero-section {
  padding: 40rpx 0;
}

.logo-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.logo-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.logo-text-wrapper {
  display: flex;
  flex-direction: column;
}

.logo-text {
  font-size: 40rpx;
  font-weight: 700;
  color: #1890ff;
  letter-spacing: 1rpx;
}

.logo-subtitle {
  font-size: 22rpx;
  color: #8c8c8c;
  margin-top: 4rpx;
}

/* 搜索区域 */
.search-section {
  position: relative;
  margin-bottom: 40rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 48rpx;
  padding: 20rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-input::placeholder {
  color: #bfbfbf;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #bfbfbf;
  background: #f0f0f0;
  border-radius: 50%;
}

/* 搜索结果 */
.search-results {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  max-height: 600rpx;
  overflow-y: auto;
  z-index: 100;
  margin-top: 16rpx;
}

.loading-tip {
  padding: 40rpx;
  text-align: center;
  color: #8c8c8c;
  font-size: 26rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.result-item:last-child {
  border-bottom: none;
}

.result-item:active {
  background: #f5f7fa;
}

.result-image {
  width: 80rpx;
  height: 60rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.result-name {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.no-results {
  padding: 48rpx;
  text-align: center;
  color: #8c8c8c;
  font-size: 26rpx;
}

/* 登录提示 */
.login-prompt {
  padding: 40rpx;
  text-align: center;
}

.prompt-text {
  display: block;
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 20rpx;
}

.prompt-btn {
  display: inline-block;
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: #fff;
  font-size: 26rpx;
  border-radius: 32rpx;
}

.prompt-btn:active {
  opacity: 0.9;
}

/* 快捷入口 */
.quick-actions {
  margin-bottom: 40rpx;
}

.action-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 20rpx;
}

.action-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: linear-gradient(135deg, #e6f4ff 0%, #bae7ff 100%);
  border-radius: 20rpx;
  margin-right: 24rpx;
}

.action-info {
  flex: 1;
}

.action-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
}

.action-arrow {
  font-size: 40rpx;
  color: #d9d9d9;
  font-weight: 300;
}

/* 底部提示 - 在 tabBar 上方 */
.footer-tip {
  position: fixed;
  bottom: calc(100rpx + env(safe-area-inset-bottom));
  left: 32rpx;
  right: 32rpx;
  padding: 24rpx 32rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #8c8c8c;
}

.login-btn {
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
