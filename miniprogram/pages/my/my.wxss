.my-page {
  padding: 20rpx;
}

.user-card {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: white;
  margin-right: 24rpx;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.email {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.vip-badge {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  font-size: 24rpx;
  display: inline-block;
}

.vip-badge.active {
  background: rgba(255, 215, 0, 0.3);
  border-color: gold;
}

/* VIP状态区域 */
.vip-status-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* VIP到期时间 */
.vip-expiry {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* VIP入口 */
.vip-entry {
  background: linear-gradient(135deg, #ffd700 0%, #ffaa00 100%);
  padding: 28rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(255, 170, 0, 0.3);
}

.vip-entry-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.vip-entry-icon {
  width: 60rpx;
  height: 60rpx;
}

.vip-entry-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.vip-entry-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #5c3d00;
}

.vip-entry-desc {
  font-size: 24rpx;
  color: #8b6914;
}

.vip-entry-arrow {
  font-size: 32rpx;
  color: #8b6914;
}

.menu-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #262626;
  flex: 1;
}

.arrow {
  color: #8c8c8c;
  font-size: 28rpx;
  flex-shrink: 0;
  line-height: 1;
}

/* 未登录状态 */
.guest-card {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  padding: 60rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.guest-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
}

.guest-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 32rpx;
}

.login-btn {
  background: white !important;
  color: #1890ff !important;
  font-size: 28rpx;
  font-weight: 500;
  padding: 16rpx 60rpx;
  border-radius: 40rpx;
  border: none;
}

.menu-item.disabled {
  opacity: 0.6;
}

.lock {
  font-size: 24rpx;
}

/* 客服按钮样式 - 让它看起来像普通菜单项 */
button.contact-btn {
  width: 100% !important;
  background: transparent !important;
  background-color: transparent !important;
  border: none !important;
  border-radius: 0 !important;
  padding: 32rpx !important;
  margin: 0 !important;
  line-height: normal !important;
  font-size: 28rpx !important;
  text-align: left !important;
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
  height: auto !important;
  min-height: 0 !important;
  box-sizing: border-box !important;
  border-bottom: 1rpx solid #f0f0f0 !important;
}

/* 最后一个元素不需要底部边框 */
button.contact-btn:last-child {
  border-bottom: none !important;
}

button.contact-btn::after {
  border: none !important;
  display: none !important;
}

/* 确保按钮内的文字样式正确 */
button.contact-btn .label {
  font-size: 28rpx !important;
  color: #262626 !important;
  font-weight: normal !important;
  flex: 1 !important;
  text-align: left !important;
}

button.contact-btn .arrow {
  color: #8c8c8c !important;
  font-size: 28rpx !important;
  font-weight: normal !important;
  flex-shrink: 0 !important;
  line-height: 1 !important;
}

/* 底部说明 */
.footer-tips {
  margin-top: 40rpx;
  padding: 24rpx;
  padding-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #8c8c8c;
}
