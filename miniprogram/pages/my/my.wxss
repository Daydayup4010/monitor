.my-page {
  padding: 20rpx;
}

.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 48rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: white;
  margin-right: 24rpx;
}

.username {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.email {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.vip-badge {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  font-size: 24rpx;
  display: inline-block;
}

.vip-badge.active {
  background: rgba(255, 215, 0, 0.3);
  border-color: gold;
}

.menu-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #262626;
}

.arrow {
  color: #8c8c8c;
  font-size: 28rpx;
}
