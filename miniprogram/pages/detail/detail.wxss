.detail-page {
  padding: 24rpx;
  min-height: 100vh;
  background: #f5f7fa;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  z-index: 1000;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 商品头部 - 与Web对齐 */
.goods-header {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 32rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.goods-image {
  width: 160rpx;
  height: 120rpx;
  background: #fafafa;
  border-radius: 16rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  box-sizing: border-box;
}

.goods-image image {
  width: 100%;
  height: 100%;
}

.goods-info {
  flex: 1;
  min-width: 0;
}

.goods-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.goods-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  font-size: 26rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-label {
  color: #999;
}

.meta-value {
  font-weight: 500;
}

.meta-divider {
  width: 2rpx;
  height: 24rpx;
  background: #e0e0e0;
}

/* 磨损/品质切换卡片 */
.wear-card {
  background: white;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.wear-selector {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.wear-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 6rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #333;
  border: 2rpx solid transparent;
  text-align: center;
  min-height: 70rpx;
  box-sizing: border-box;
}

.wear-btn:active {
  opacity: 0.8;
}

.wear-btn.active {
  background: #e6f4ff;
  color: #1890ff;
  border-color: #1890ff;
}

.wear-btn .wear-label {
  font-size: 22rpx;
  margin-bottom: 2rpx;
}

.wear-btn .wear-price {
  font-size: 20rpx;
  opacity: 0.7;
}

.wear-btn.active .wear-price {
  opacity: 1;
}

.wear-btn.stattrak-btn {
  background: #fff7e6;
  border-color: #ffd591;
  color: #d46b08;
}

.wear-btn.stattrak-btn:active {
  background: #ffe7ba;
}

.wear-btn .switch-icon {
  font-size: 18rpx;
}

/* 价格涨幅卡片 - 与Web对齐 */
.price-change-card {
  background: white;
  border-radius: 16rpx;
  padding: 16rpx 0;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.price-change-nav {
  display: flex;
  align-items: center;
}

.nav-arrow {
  width: 36rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #bbb;
  font-size: 32rpx;
  font-weight: 300;
  flex-shrink: 0;
}

.nav-arrow text {
  line-height: 1;
}

.price-change-scroll {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
}

.price-change-list {
  display: inline-flex;
  gap: 12rpx;
}

.price-change-item {
  width: 295rpx;
  height: 100rpx;
  flex-shrink: 0;
  background: #f5f8fd;
  border-radius: 12rpx;
  padding: 16rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}

.price-change-item.is-up {
  background: #fff5f5;
}

.price-change-item.is-down {
  background: #f0fff4;
}

.change-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.change-icon {
  font-size: 24rpx;
}

.change-icon.icon-up {
  color: #F56C6C;
}

.change-icon.icon-down {
  color: #0DAB62;
}

.change-value {
  font-size: 28rpx;
  font-weight: 500;
}

.price-diff {
  font-weight: 600;
}

.change-rate {
  font-size: 26rpx;
  margin-left: 6rpx;
}

.text-red {
  color: #F56C6C;
}

.text-green {
  color: #0DAB62;
}

/* 价格走势图卡片 */
.chart-card {
  background: white;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.chart-filters {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.chart-picker {
  flex: 1;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: #f5f8fd;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
}

.picker-icon {
  width: 32rpx;
  height: 32rpx;
}

.picker-text {
  font-size: 26rpx;
  color: #333;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
}

.chart-container {
  width: 100%;
  height: 400rpx;
  background: #fafafa;
  border-radius: 12rpx;
  overflow: visible;
  position: relative;
}

.price-chart {
  width: 100%;
  height: 400rpx;
}

/* 图表数据提示框 */
.chart-tooltip {
  position: absolute;
  z-index: 9999;
  transform: translateX(-50%);
  background: #fff;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
}

.tooltip-date {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.tooltip-price {
  font-size: 24rpx;
  color: #f97316;
  margin-bottom: 4rpx;
}

.tooltip-count {
  font-size: 24rpx;
  color: #1890ff;
}

/* 市场对比卡片 - 与Web对齐 */
.market-card {
  background: white;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.market-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.market-item {
  background: #f5f8fd;
  border-radius: 16rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

.market-item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.platform-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.platform-icon {
  width: 36rpx;
  height: 36rpx;
}

.platform-name {
  font-size: 28rpx;
  color: #9ca3af;
}

.market-item-price {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: 500;
  color: #f97316;
  white-space: nowrap;
}

.lowest-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  background: #0DAB62;
  color: white;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.market-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.sell-count {
  color: #6b7280;
}

.update-time {
  color: #9ca3af;
}

/* 在售表格 - 与Web对齐 */
.onsale-card {
  background: white;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.onsale-table {
  font-size: 26rpx;
}

.table-header,
.table-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.table-header {
  font-size: 26rpx;
  color: #999;
  border-bottom: 2rpx solid #f0f0f0;
}

.table-row {
  border-bottom: 2rpx solid #f5f5f5;
}

.table-row:last-child {
  border-bottom: none;
}

.col-source {
  flex: 2;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.col-price,
.col-bid {
  flex: 1.5;
  font-size: 28rpx;
}

.col-count {
  flex: 1;
  text-align: right;
  font-size: 26rpx;
  color: #666;
}

.platform-icon-small {
  width: 40rpx;
  height: 40rpx;
}

.platform-name-small {
  font-size: 26rpx;
  color: #333;
}

.text-orange {
  color: #ff6b00;
  font-weight: 500;
}

/* 提示卡片 */
.tip-card {
  padding: 24rpx;
  text-align: center;
}

.tip-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty {
  padding: 160rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
}
