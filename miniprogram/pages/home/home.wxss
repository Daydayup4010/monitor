.home-page {
  padding: 24rpx;
  min-height: 100vh;
  background: #f5f7fa;
}

/* 顶部标题卡片 */
.header-card {
  background: #1890ff;
  padding: 28rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.2);
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-title {
  display: flex;
  align-items: center;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: white;
}

.filter-icon {
  font-size: 20rpx;
}

.header-desc {
  margin-top: 12rpx;
}

.desc-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 平台选择卡片 */
.platform-card {
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.platform-item {
  flex: 1;
}

.platform-label {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 12rpx;
}

.platform-select {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  gap: 10rpx;
}

.select-icon {
  width: 36rpx;
  height: 36rpx;
}

.select-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #262626;
}

.select-arrow {
  font-size: 20rpx;
  color: #8c8c8c;
}

/* 筛选面板 */
.filter-panel {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 0 24rpx;
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.filter-panel.show {
  max-height: 800rpx;
  padding: 24rpx;
}

.filter-row {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.filter-group {
  flex: 1;
}

.filter-group.full {
  flex: none;
  width: 100%;
}

.filter-label {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 8rpx;
}

.filter-input {
  width: 100%;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #262626;
  box-sizing: border-box;
}

.filter-separator {
  font-size: 28rpx;
  color: #8c8c8c;
  padding-bottom: 20rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #262626;
}

.picker-arrow {
  font-size: 20rpx;
  color: #8c8c8c;
}

.filter-actions {
  margin-top: 12rpx;
  display: flex;
  justify-content: center;
}

.btn-confirm {
  width: 66%;
  height: 96rpx;
  background: #1890ff !important;
  color: white !important;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-confirm::after {
  border: none;
}

/* 数据统计 */
.data-stats {
  padding: 16rpx 8rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

/* 未登录提示条 */
.login-tip {
  background: white;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.tip-text {
  font-size: 26rpx;
  color: #595959;
}

.tip-btn {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: 500;
}

/* 饰品列表 */
.skin-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.skin-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  position: relative;
  transition: background 0.2s;
}

.skin-item:active {
  background: #f5f7fa;
}

/* 排名标记 */
.rank-badge {
  position: absolute;
  left: 24rpx;
  top: 24rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  color: #8c8c8c;
  z-index: 1;
}

.rank-badge.top {
  background: #faad14;
  color: white;
}

/* 饰品项容器 */
.skin-item-wrapper {
  border-bottom: 1rpx solid #f0f0f0;
}

.skin-item-wrapper:last-child {
  border-bottom: none;
}

.skin-item-wrapper .skin-item {
  border-bottom: none;
}

/* 左侧区域（图片+平台数据按钮） */
.skin-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.skin-left.with-rank {
  margin-left: 50rpx;
}

/* 饰品图片 */
.skin-img {
  width: 100rpx;
  height: 100rpx;
  background: #fafafa;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

/* 平台数据按钮 */
.platform-data-btn {
  margin-top: 12rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f5ff 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 20rpx;
  color: #1890ff;
  border: 1rpx solid rgba(24, 144, 255, 0.2);
}

.platform-data-btn .btn-arrow {
  font-size: 16rpx;
  color: #1890ff;
}

/* 各平台数据展开面板 */
.platform-data-panel {
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  background: #fafafa;
  margin: 0 24rpx;
  border-radius: 12rpx;
}

.platform-data-panel.show {
  max-height: 800rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.platform-data-item {
  background: white;
  padding: 16rpx;
  border-radius: 10rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.04);
}

.platform-data-item:last-child {
  margin-bottom: 0;
}

.platform-name-row {
  margin-bottom: 12rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.platform-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #262626;
}

.platform-price-row {
  display: flex;
  justify-content: space-between;
}

.platform-price-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.platform-price-label {
  font-size: 22rpx;
  color: #8c8c8c;
}

.platform-price-value {
  font-size: 24rpx;
  font-weight: 600;
}

.platform-price-value.sell {
  color: #52c41a;
}

.platform-price-value.bid {
  color: #ff4d4f;
}

.platform-price-count {
  font-size: 22rpx;
  color: #8c8c8c;
}

/* 饰品信息 */
.skin-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.skin-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #262626;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

/* 价格行 */
.price-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.price-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.price-icon {
  width: 32rpx;
  height: 32rpx;
}

.price {
  font-size: 28rpx;
  font-weight: 600;
}

.price.source {
  color: #52c41a;
}

.price.target {
  color: #1890ff;
}

/* 箭头样式 */
.arrow-wrapper {
  display: flex;
  align-items: center;
  margin: 0 8rpx;
}

.arrow-line {
  width: 20rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #52c41a, #1890ff);
  border-radius: 2rpx;
}

.arrow-head {
  width: 0;
  height: 0;
  border-top: 6rpx solid transparent;
  border-bottom: 6rpx solid transparent;
  border-left: 8rpx solid #1890ff;
  margin-left: -1rpx;
}

/* 利润行 */
.profit-row {
  display: flex;
  align-items: flex-start;
  gap: 28rpx;
}

.profit-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 6rpx;
}

.profit-label {
  font-size: 20rpx;
  color: #8c8c8c;
  line-height: 1;
}

.profit-value {
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1;
}

.profit-value.diff {
  color: #faad14;
}

.profit-value.count {
  color: #595959;
}

/* 利润率颜色 */
.profit-value.rate.primary {
  color: #1890ff;
}

.profit-value.rate.success {
  color: #52c41a;
}

.profit-value.rate.warning {
  color: #faad14;
}

.profit-value.rate.danger {
  color: #ff4d4f;
}

/* 空状态 */
.empty {
  padding: 120rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 96rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 加载中 */
.loading {
  padding: 80rpx;
  text-align: center;
  background: white;
  border-radius: 16rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #8c8c8c;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 32rpx;
  color: #1890ff;
  font-size: 28rpx;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 32rpx;
  color: #bfbfbf;
  font-size: 24rpx;
}
