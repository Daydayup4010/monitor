.home-page {
  padding: 20rpx;
}

.filter-bar {
  background: white;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.picker {
  padding: 16rpx 32rpx;
  background: #f5f7fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #262626;
}

.arrow {
  font-size: 32rpx;
  color: #1890ff;
}

.skin-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.skin-item {
  display: flex;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.skin-item:last-child {
  border-bottom: none;
}

.skin-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #fafafa;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.skin-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.skin-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 12rpx;
}

.price-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.price {
  font-size: 32rpx;
  font-weight: 600;
}

.price.source {
  color: #52c41a;
}

.price.target {
  color: #1890ff;
}

.profit-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.diff {
  font-size: 24rpx;
  color: #faad14;
}

.rate {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.rate.danger { background: #fff1f0; color: #ff4d4f; }
.rate.warning { background: #fffbe6; color: #faad14; }
.rate.success { background: #f6ffed; color: #52c41a; }
.rate.primary { background: #e6f7ff; color: #1890ff; }

.load-more {
  text-align: center;
  padding: 40rpx;
  color: #8c8c8c;
  font-size: 28rpx;
}

